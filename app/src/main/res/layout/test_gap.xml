<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/relative"
        android:layout_height="wrap_content">
      <FrameLayout
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:id="@+id/icon"
          android:layout_margin="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zara"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layered_gradient"/>

      </FrameLayout>
      <RelativeLayout
          android:layout_centerHorizontal="true"
         android:id="@+id/icon_socio"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"

          android:orientation="horizontal">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="25dp"
            app:materialIcon="facebook"
            app:materialIconColor="#fff"
            app:materialIconSize="24dp"
            android:id="@+id/fb_login"
            android:layout_margin="5dp"
            android:scaleType="center"
            android:background="@drawable/gol_black"
            android:layout_height="25dp" />
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="25dp"
            app:materialIcon="google"
            app:materialIconColor="#fff"
            android:layout_toRightOf="@+id/fb_login"
            android:id="@+id/gplus_login"
            app:materialIconSize="24dp"
            android:layout_margin="5dp"
            android:scaleType="center"
            android:background="@drawable/gol_black"
            android:layout_height="25dp" />
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="25dp"
            app:materialIcon="instagram"
            android:layout_toRightOf="@+id/gplus_login"
            android:id="@+id/insta_login"
            app:materialIconColor="#fff"
            app:materialIconSize="24dp"
            android:layout_margin="5dp"
            android:scaleType="center"
            android:background="@drawable/gol_black"
            android:layout_height="25dp" />
      <TextView
           android:layout_width="25dp"
          android:layout_height="25dp"
          android:text="21"
          android:gravity="center"
          android:layout_margin="5dp"
          android:id="@+id/fb_num"
          android:layout_below="@+id/gplus_login"
          android:textColor="#000"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="76"
            android:gravity="center"
            android:layout_toRightOf="@+id/fb_num"
            android:layout_margin="5dp"
            android:id="@+id/twi_num"
            android:layout_below="@+id/gplus_login"
            android:textColor="#000"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="32"
            android:gravity="center"
            android:layout_toRightOf="@id/twi_num"
            android:layout_margin="5dp"
            android:id="@+id/inst_num"
            android:layout_below="@+id/gplus_login"
            android:textColor="#000"/>

      </RelativeLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="82"
          android:textColor="#000"
          android:textSize="40sp"
          android:padding="10dp"
          android:layout_alignParentRight="true"/>
    </RelativeLayout>
  </android.support.v7.widget.CardView>

