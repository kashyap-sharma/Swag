<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <jlabs.soswagger.StarView.StarActivity
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/actionbar"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/bar"
                android:paddingTop="15dp"
                android:paddingLeft="-10dp"
                android:id="@+id/nav"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/letter"
                android:padding="13dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/drop"
                android:id="@+id/drop"
                android:padding="15dp"
                android:paddingRight="-7dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userbar"
            android:gravity="center_vertical"
            >
            <FrameLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="64dp"
                    android:layout_gravity="center"
                    android:layout_height="64dp"
                    android:background="@drawable/gol2"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/gol1"/>

                <jlabs.soswagger.Rounded.RoundedImageView
                    android:layout_width="56dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/photo"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/view"
                    android:layout_height="56dp" />
            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@drawable/name"
                    android:text="Kashyap Sharma"
                    android:textSize="12sp"
                    android:textColor="#455F97"
                    android:paddingTop="3dp"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/user"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/occu"
                    android:text="Application Developer"
                    android:textSize="10sp"
                    android:layout_below="@+id/user"
                    android:textColor="#fff"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView

                android:layout_width="64dp"
                android:layout_height="64dp"
                android:textColor="#FDF300"
                android:layout_alignParentRight="true"
                android:text="42"
                android:layout_marginRight="15dp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/golbutton"
                />

        </RelativeLayout>
        <TextView
            android:layout_below="@+id/userbar"
            android:id="@+id/reta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="RETAIL"/>


        <TableLayout
            android:layout_width="match_parent"
          android:layout_above="@+id/find"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/zara"

                       />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layered_gradient"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gap"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layered_gradient"/>

                </FrameLayout>
            </TableRow>
            <TableRow
                android:gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lacoste"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layered_gradient"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tomm"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layered_gradient"/>

                </FrameLayout>
            </TableRow>
        </TableLayout>







        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Find more brands"
            android:id="@+id/find"
            android:background="@drawable/view_more"
            android:textColor="#000000"
            android:paddingLeft="40dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:paddingRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>





</FrameLayout>
